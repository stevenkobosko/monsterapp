<% if @monsters.blank? %>
<p> There are not any Monsters. </p>
<% else %>
<p> These are the current monsters. </p>

<ul id = "monsters">
	<% @monsters.each do |m| %>
		<li>
			<%= link_to m.name, {:action => 'show', :id => m.id} -%>
			<b> <%= link_to 'Edit', {:action => 'edit', :id => m.id} %> </b>
			<b> <%= link_to 'Delete', {:action => 'delete', :id => m.id},
				:confirm => 'Are you sure you want to delete this monster?' %></b>
		</li>
	<% end %>
</ul>

<%= form_tag :action => 'list' do %>

    <%= text_field '', 'sortby' %>
    <%= submit_tag 'Sort' %>

<% end %>

<% end %>
<p><%= link_to "Add new Monster", {:action => 'new'}%></p>